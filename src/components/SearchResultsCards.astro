---
export interface Props {
  parks: {
    id: string;
    name: string;
    type: string;
    address: string;
    introHtml: string;
    imageUrl: string | null;
    imageAlt: string;
  }[];
}
const { parks } = Astro.props;
---

<div class="w-full p-6">
  <div class="grid grid-cols-1 sm:grid-cols-4 gap-6">
    {parks.map((park) => (
      <article class="bg-white border border-gray-200 shadow-sm rounded-lg overflow-hidden flex flex-col" key={park.id}>
        {park.imageUrl && (
          <img
            src={park.imageUrl}
            alt={park.imageAlt}
            class="w-full aspect-square object-cover"
            loading="lazy"
          />
        )}
        <div class="p-4 flex-1 flex flex-col">
          <h3 class="text-lg font-semibold mb-1">{park.name}</h3>
          
          <p class="text-sm text-gray-500 mb-2">{park.address}
           
        </div>
      </article>
    ))}
  </div>
</div>
